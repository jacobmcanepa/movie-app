<div class="home-page row">

  <form id="home-form" class="home-form col-sm-6 container-fluid">

    <div class="form-group">
      <label for="genre">GENRE</label>
      <select class="form-control genreSelect" id="genre">
        <option>Crime</option>
        <option>Drama</option>
        <option>Romance</option>
        <option>Horror</option>
        <option>Documentary</option>
      </select>

    </div>

    <div class="form-group">
      <label for="era">ERA</label>
      <select class="form-control yearSelect" id="era">
        <option>2000</option>
        <option>1990</option>
        <option>1980</option>
        <option>1970</option>
        <option>1960</option>
      </select>

    </div>

    <button type="submit" class="btn suggestButton">Suggest Movie</button>

  </form>

  <div id="suggestions" class="mt-4"></div>

</div>

  <span style="opacity: 0;" id="user_id">{{id}}</span>

<script src="/javascript/homepage.js"></script>